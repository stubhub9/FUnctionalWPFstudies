    -->
        <Button Name="closeClippedWindow"  
            Background="Transparent"
            BorderBrush="{x:Null}"
            Foreground="Red"
            FontSize="15"
            Content="&#x274C;"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Click="Button_Click2Close" MouseEnter="MouseEnterCloseButton" 
            />
        
